/* pages/search/search.wxss */
.search{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 10px;
}
.searchcion{
  margin: 10rpx;
  margin-bottom: 0rpx;
}
picker{
  margin-left: 15px;
}
.search_arr{
  margin-left: 2%;
  border-bottom: 1px solid #d0d0d0;
  display: flex;
  flex-direction: row;
  width: 80%;
  background-color: #d0d0d0;
  opacity: 0.5;
  border-radius: 5px;
}
.btn{
  padding: 0rpx 10rpx;
  margin-left: 10rpx;
  width: 50px;
  height: 35px;
  background-color: white;
}
.btn::after{
  border: none;
}
.content{
  margin-top: 10px;
}
.free-WaterfallFlow{
  width:94%;
  column-count:2;/*column-count 属性规定元素应该被分隔的列数：*/
  margin-left: 2%;
}
.free-WaterfallFlow .flex-wrap{
  display: inline-block;
  width:98%;
  margin-bottom:2%;
  border:1px solid #ccc;
  padding:2%;
  padding-top:5%;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
  text-align: center;
}
.flex-wrap image{
  width:95%;
  margin:0 auto;
}
.title{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.down{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}

.hot image{
  margin-bottom: -5rpx;
}
.date{
  font-size:13px;
  padding:2% 0;
  color:#aaa;
  text-align: right;
}
.creator{
  font-size:13px;
  padding:2% 0;
  color:#aaa;
  text-align: right;
}
